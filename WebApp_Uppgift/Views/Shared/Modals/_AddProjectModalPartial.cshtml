@model Domain.Models.AddProjectFormData



<section id="add-project-modal" class="modal modal-hide">
	<div class="modal-backdrop"></div>

	<div class="modal-card">
		<div class="modal-header">
			<h3>Add Project</h3>
			<button class="btn-close" onclick="closeModal()" aria-label="Close"></button>
		</div>
		<div class="modal-img-container">
			<img class="modal-img-project" src="~/images/Project_Image.svg" />
		</div>
		<div class="modal-body">
			<form id="add-project-form" asp-action="Add" asp-controller="ProjectManagement" method="post" novalidate>

				<div class="input-group">
					<label class="form-label">Project Name</label>
					<input asp-for="ProjectName" type="text" class="form-input" placeholder="Project Name" required />
				</div>
				<div class="input-group">
					<label class="form-label">Client Name</label>
					<input asp-for="ClientName" type="text" class="form-input" placeholder="Client Name" required />
				</div>
				<div class="input-group">
					<label class="form-label">Description</label>
					<textarea asp-for="Description" class="textarea"></textarea>
				</div>
				<div class="date-group">
					<div class="input-group">
						<label class="form-label">Start Date</label>
						<input asp-for="StartDate" type="date" class="form-input" required />
					</div>
					<div class="input-group">
						<label class="form-label">End Date</label>
						<input asp-for="EndDate" type="date" class="form-input"  required />
					</div>
				</div>
				<div class="input-group">
					<label class=" form-label">Budget</label>
					<div id="budget-input" class="input-group form-input-icon">
						<i class="fa-solid fa-dollar-sign"></i>
						<input asp-for="Budget" type="number" class="form-input"  placeholder="" required />
					</div>
				</div>
				<div class="input-group">
					<label for="status">Status</label>
					<select asp-for="StatusId" asp-items="ViewBag.StatusOptions" class="form-control" id="status" required">
						<option disabled selected value="">-- Select status --</option>
					</select>
				</div>
				<input type="hidden" asp-for="UserId" value="test-user-123" />

				<input type="hidden" asp-for="ClientId" value="1" />


			</form>

		</div>
		<div class="modal-footer">
			<button class="btn btn-blue btn-blue:hover" type="submit" form="add-project-form">
				<i class="fa-solid fa-plus"></i>
				Create
			</button>
		</div>
	</div>
</section>