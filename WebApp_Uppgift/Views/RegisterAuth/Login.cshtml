@model WebApp_Uppgift.Models.LoginFormModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="center-screen wrapper">
        <div class="surface connect-window-login center-screen">
            <div class="flex-column">
                <h1>@ViewData["Title"]</h1>
                <form method="post" asp-action="Login">
                    <div class="input-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="input-group flex-disable">
                        <input type="checkbox" id="remember" name="remember">
                        <label for="remember">Remember me</label>
                    </div>

                    <div class="input-group">
                        <button class="btn btn-blue">Log in</button>
                    </div>

                    <div class="flex-row">
                        <p>Don't have an account?</p>
                        <a asp-controller="RegisterAuth" asp-action="SignUp">Sign up</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
