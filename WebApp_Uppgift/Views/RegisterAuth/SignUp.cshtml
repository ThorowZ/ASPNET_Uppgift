@model SignUpViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Sign Up";
}

<div class="container">
    <div class="center-screen">
        <div class="surface connect-window-signup center-screen flex-column">
            <h1>@ViewData["Title"]</h1>

            <form id="sign-up-form" method="post" asp-controller="RegisterAuth" asp-action="SignUp" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group">
                    <label asp-for="FormData.Username"></label>
                    <input asp-for="FormData.Username" class="form-input" placeholder="Enter your username" required />
                    <span asp-validation-for="FormData.Username" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="FormData.Email"></label>
                    <input asp-for="FormData.Email" class="form-input" placeholder="Enter your email" required />
                    <span asp-validation-for="FormData.Email" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="FormData.Password"></label>
                    <input asp-for="FormData.Password" class="form-input" placeholder="Enter your password" required />
                    <span asp-validation-for="FormData.Password" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="FormData.ConfirmPassword"></label>
                    <input asp-for="FormData.ConfirmPassword" class="form-input" placeholder="Confirm your password" required />
                    <span asp-validation-for="FormData.ConfirmPassword" class="text-danger"></span>
                </div>

                @* Optional client selector (currently disabled) *@
                @* <div class="input-group">
                    <select asp-for="FormData.ClientId" asp-items="@Model.ClientOptions" class="form-input">
                        <option disabled selected value="">-- Select a Client --</option>
                    </select>
                    <span asp-validation-for="FormData.ClientId" class="text-danger"></span>
                </div> *@

                <div class="term-service input-group">
                    <input type="checkbox" id="terms" name="terms" required />
                    <label for="terms">I accept Terms and Conditions</label>
                </div>

                <div class="input-group">
                    <button type="submit" class="btn btn-blue">Sign Up</button>
                </div>

                <div class="flex-row">
                    <p>Already have an account?</p>
                    <a asp-controller="RegisterAuth" asp-action="Login">Log in</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScripts")

    <script>
        document.getElementById("sign-up-form")?.addEventListener("submit", function () {
            console.log(" Razor form submitted!");
        });
    </script>
}
