@model WebApp_Uppgift.ViewModels.ProjectPageViewModel

@{
    Layout = "_PortalLayout";
    ViewData["Title"] = "Projects";
}

<div class="page-header">
    <div class="flex-row auto-push">
        <h2>Projects</h2>
        <button data-type="modal" data-target="add-project-modal" class="btn btn-blue btn-blue:hover btn-addproject">
            <i class="fa-solid fa-plus"></i>
            Add Projects
        </button>
    </div>
</div>

<partial name="Partial/ProjectList/_ProjectMenu" />
<partial name="Modals/_AddProjectModalPartial" model="Model.Modal.Form" />
<partial name="Partial/ProjectList/_ProjectList" model="Model.Projects" />
